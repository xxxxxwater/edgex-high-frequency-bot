@version 3.6+
@date 2025-10-08
"""

from dataclasses import dataclass
from typing import List


@dataclass
class Config:
    """配置类"""
    # EdgeX账户信息
    account_id: int
    stark_private_key: str
    
    # 网络设置
    testnet: bool = False
    
    # 交易对列表
    symbols: List[str] = None
    
    @property
    def base_url(self) -> str:
        """API基础URL"""
        return "https://test-api.edgex.exchange" if self.testnet else "https://pro.edgex.exchange"
    
    @property
    def ws_url(self) -> str:
        """WebSocket URL"""
        return "wss://test-quote.edgex.exchange" if self.testnet else "wss://quote.edgex.exchange"


def get_my_config() -> Config:
    """获取配置"""
    
    config = Config(
        # ===== 必填项 =====
        # 你的EdgeX账户ID（从EdgeX官网获取）
        account_id=YOUR_ACCOUNT_ID_HERE,  # 例如: 667221775494415325
        
        # 你的Stark私钥（用于L2交易签名）
        stark_private_key="YOUR_STARK_PRIVATE_KEY_HERE",  # 例如: "0x1234..."
        
        # ===== 网络设置 =====
        # 使用测试网还是生产网
        # True = 测试网（虚拟资金，建议先测试）
        # False = 生产网（真实资金）
        testnet=True,  # 建议先用测试网验证策略
        
        # ===== 交易对设置 =====
        # EdgeX使用USD而非USDT后缀
        
        # v3.6配置（4个币对，推荐新手）
        symbols=[
            "BTC-USD",
            "ETH-USD",
            "SOL-USD",
            "BNB-USD"
        ]
        
        # v3.7配置（7个币对，需要更多资金）
        # symbols=[
        #     "BTC-USD",
        #     "ETH-USD",
        #     "SOL-USD",
        #     "BNB-USD",
        #     "DOGE-USD",
        #     "XRP-USD",
        #     "HYPE-USD"
        # ]
    )
    
    return config


